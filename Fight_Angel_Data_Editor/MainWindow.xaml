<Window x:Class="Fight_Angel_Data_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fight_Angel_Data_Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="182" Width="729">
    <Grid>
        <StackPanel Margin="19,10,19,0">
            <Label Content="Path to game data folder" Width="690"/>
            <TextBox Name="data_path">C:\Program Files\Steam\steamapps\common\Fight AngelSE\FightAngelSE_Data</TextBox>
            <Label Content="Multiply default max breast size times 1.6" Width="281"/>
            <CheckBox Name="bud_scaling_enabled" Width="271" IsChecked="True">Adjust breast up and down scaling (optional)</CheckBox>
            <Button x:Name="b_scaler" Background="LightGray"
                            BorderBrush="Black" BorderThickness="0" 
                            Click="b_scaler_run" ClickMode="Press" Content="Run" Width="55"/>
            <Label Name="error_label" Content="" Width="240"/>
        </StackPanel>
        
    </Grid>
</Window>
